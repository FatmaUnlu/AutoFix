@model UserProfileViewModel
@{
    ViewBag.Title = "Profil Güncelleme";
}

<!-- Page Title -->
        <div class="page-title-area">
            <img src="~/assets/img/home-one/footer-car.png" alt="Title">
            <div class="container">
                <div class="page-title-content">
                    <h2>Profil Güncelleme</h2>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <i class='bx bx-chevron-right'></i>
                        </li>
                        <li>Profil Güncelleme</li>
                    </ul>
                </div>
            </div>
        </div>
<!-- End Page Title -->

        <div class="login-area ptb-100">
            <div class="container">
                <div class="user-actions mb-40">        
                    <div class="text-info">@TempData["Message"]</div>
                <div asp-validation-summary="All" class="text-danger"></div> <!-- validation mesajlarını göstermeye yarar.-->
            </div>
                <div class="login-item">
                    <form method="post" asp-controller="Account" asp-action="Profile">    
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                             <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName">
                             <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" class="form-control" placeholder="Ad" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Surname"></label>
                            <input type="text" class="form-control" placeholder="Soyad" asp-for="Surname">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" placeholder="Telefon Numarası" asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div> 
                         <div>
                        <button type="submit" class="btn login-btn" asp-controller="Account" asp-action="PasswordUpdate" class="nav-link"> Şifre güncellemek için tıklayın. </button>
                    </div>                                                
                            <div class="text-center">
                        <button type="submit" class="btn login-btn">Güncelle</button>
                    </div>                                        
                    </form>                   
                </div>
            </div>
        </div>
