@model ResetPasswordViewModel
@{
    ViewBag.Title = "Şifremi Unuttum";
}

<!-- Page Title -->
        <div class="page-title-area">
            <img src="~/assets/img/home-one/footer-car.png" alt="Title">
            <div class="container">
                <div class="page-title-content">
                    <h2>Sign In</h2>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <i class='bx bx-chevron-right'></i>
                        </li>
                        <li>Sign In</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- End Page Title -->

        <div class="login-area ptb-100">
            <div class="container">
                <div class="user-actions mb-40">        
                    <div class="text-info">@TempData["Message"]</div>
                <div asp-validation-summary="All" class="text-danger"></div> <!-- validation mesajlarını göstermeye yarar.-->
            </div>
                <div class="login-item">
                    <form method="post" asp-controller="Account" asp-action="ConfirmResetPassword">    
                        <input type="hidden" value="@ViewBag.Code" id="Code"" name="Code"/>
                        <input type="hidden" value="@ViewBag.UserId" id="UserId"" name="UserId"/>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input type="NewPassword" class="form-control" placeholder="Yeni Şifre" asp-for="NewPassword">
                             <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="ConfirmNewPassword"></label>
                            <input type="text" class="form-control" placeholder="Yeni Şifre" asp-for="ConfirmNewPassword">
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                       
                            <div class="text-center">
                        <button type="submit" class="btn login-btn">Yenile</button>
                    </div>                  
                    </form>
                    
                </div>
            </div>
        </div>
