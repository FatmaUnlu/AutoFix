@model PasswordUpdateViewModel
@{
    ViewBag.Title = "Şifre Güncelleme";
}

<!-- Page Title -->
        <div class="page-title-area">
            <img src="~/assets/img/home-one/footer-car.png" alt="Title">
            <div class="container">
                <div class="page-title-content">
                    <h2>Şifre Güncelleme</h2>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <i class='bx bx-chevron-right'></i>
                        </li>
                        <li>Şifre Güncelleme</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- End Page Title -->

        <div class="login-area ptb-100">
            <div class="container">
                <div class="user-actions mb-40">        
                    <div class="text-info">@TempData["Message"]</div>
                <div asp-validation-summary="All" class="text-danger"></div> <!-- validation mesajlarını göstermeye yarar.-->
            </div>
                <div class="login-item">
                    <form method="post" asp-controller="Account" asp-action="PasswordUpdate">    
                        <div class="form-group">
                            <label asp-for="OldPassword"></label>
                            <input type="text" class="form-control" placeholder="Eski Şifre" asp-for="OldPassword">
                             <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input type="text" class="form-control" placeholder="Yeni Şifre" asp-for="NewPassword">
                             <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="ConfirmNewPassword"></label>
                            <input type="text" class="form-control" placeholder="Yeni Şifre(Tekrar)" asp-for="ConfirmNewPassword">
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>                                                                                           
                            <div class="text-center">
                        <button type="submit" class="btn login-btn">Güncelle</button>
                    </div>   
                   
                    
                    </form>
                    
                </div>
            </div>
        </div>