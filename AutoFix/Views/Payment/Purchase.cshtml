@model PaymentViewModel
@{
    ViewBag.Title = "Ödeme Sayfası";
}

<!-- Page Title -->
<div class="page-title-area">
    <img src="~/assets/img/home-one/footer-car.png" alt="Title">
    <div class="container">
        <div class="page-title-content">
            <h2>ÖDEME SAYFASI</h2>
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <i class='bx bx-chevron-right'></i>
                </li>
                <li>Ödeme Sayfası</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title -->
<section class="checkout-area ptb-100">
    <div class="container">
        <div class="user-actions mb-40">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <form asp-action="Index" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout-item">
                        <h2 class="title">Kart Bilgileri</h2>                      
                        <div class="checkout-one">
                            <div class="form-group">
                                <label asp-for="CardModel.CardHolderName"></label>
                                <input asp-for="CardModel.CardHolderName" class="form-control" />
                                <span asp-validation-for="CardModel.CardHolderName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CardModel.CardNumber"></label>
                                <input asp-for="CardModel.CardNumber" id="txtCardNumber" class="form-control"/>
                                <span asp-validation-for="CardModel.CardNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CardModel.ExpireMonth"></label>
                                <input asp-for="CardModel.ExpireMonth" class="form-control"/>
                                <span asp-validation-for="CardModel.ExpireMonth" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CardModel.ExpireYear"></label>
                                <input asp-for="CardModel.ExpireYear" class="form-control" />
                                <span asp-validation-for="CardModel.ExpireYear" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                               <label asp-for="CardModel.Cvc"></label>
                                    <input asp-for="CardModel.Cvc"  class="form-control" />
                                    <span asp-validation-for="CardModel.Cvc" class="text-danger"></span>
                            </div>                           
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout-item">
                        <h2>Ödeme Seçenekleri</h2>
                       <div class="order-table table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Taksit </th>
                                        <th>Ödenecek Tutar</th>
                                    </tr>
                                </thead>
                                <tbody id="table-installments">
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn checkout-btn">Ödeme Yap</button>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- End Checkout -->
@section Scripts
{
<script>
           $(document).ready(function(){
               console.log("Jquery OK")
           });

           $("#txtCardNumber").keyup(function(){
               var bin=$(this).val();
               //console.log($(this).val()); // basıldığı andaki input değeri alır

               if(bin.length>=6 && bin.length<=16){ 
                   console.log(bin);
                   var model={
                       binNumber:bin
                   };
                   $.ajax({// ajax bir metod içerisinde ise obje istiyor.sayfada sadece belirli bir kısım için veri alma verme yapılacaksa ajax kullanışır.
                       url:'@Url.Action("CheckInstallment","Payment")', //payment sayfasındaki checkinstalment  
                       type:"POST",
                       data:model,
                       dataType:"json",
                       error:function(request,status,error){
                           console.log(request);
                       },
                       success:function(response){
                           console.log(response);
                          fillInstallments(response.installmentPrices);
                       }
                   });
               }
           });

           function fillInstallments(installmentPrices){
               $("#table-installments").empty();
               for(var i =0;i<installmentPrices.length; i++){
                  
               var data = installmentPrices[i];
               //elemam üretildi
               var tr  = document.createElement("tr");
               var td1  = document.createElement("td");
               var td2  = document.createElement("td");
               var td3  = document.createElement("td");
               var radio = document.createElement("input");
               var label = document.createElement("label");
    
               //attributeler değiştirildi
               $(radio).attr("type","radio").attr("name","install-radio").attr("data",data.installmentNumber).attr("id","rd"+i).appendTo(td1); //radio button özellikleri ayarlandı ve td1 kolununa eklendi.

               //attr("data",data.installmentNumber) dataya atama yap demek
              $(label).attr("for","rd"+i).html(data.installmentNumber).appendTo(td1);

              $(radio).on('change',function(){
                  
                  $('#hdInstallment').val($(this).attr("data"));
                 
                  cosole.log($(this).attr("data")); //datayı oku
                  console.log($(this).val());
              });

              if(i==0){
                  $(radio).prop('checked',true);
              }

              $(td2).html(data.price);
              $(td3).html(data.totalPrice);
              
              $(tr).append(td1).append(td2).append(td3).appendTo($("#table-installments"));

               }
           }
</script>
}
@section Styles
    {
<style>
    input {
        border: solid 1px #e3eeff;
        height: 50px;
        padding: 0 15px;
    }
</style>
