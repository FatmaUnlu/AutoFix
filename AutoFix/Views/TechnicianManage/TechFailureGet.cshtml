<script>

    function HaritaTık(tiklanan_id)
    {      // alert(tiklanan_id);
         $('#'+tiklanan_id).click(function(){
            //alert(tiklanan_id+"Harita  Açılıyor");
            var failureId=tiklanan_id;
            $.ajax({

                url:"/technicianManage/mapPosition",
                type:"POST",
                data:
                {"failureId" :failureId
