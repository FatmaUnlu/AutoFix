            <div class="card-body">
                <h6 class="card-title">Pie chart</h6>
                <div id="apexPie"></div>
            </div>
        </div>
    </div>
  
        <input type="hidden" id="ServiceProductId" name="ServiceProductId" value="ServiceProductId" />   

