@section Scripts{
    <!-- Custom js for this page -->
    <script src="../../../admin-assets/js/apexcharts-light.js"></script>
    <script>       
        var ctx = document.getElementById("apexPie").getContext('2d');
        var apexPie = new Chart(ctx, {
            url: '@Url.Action("ProductReport","Report")' ,
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    backgroundColor: [
                        "#2ecc71",
                        "#3498db",
                        "#95a5a6",
                        "#9b59b6",
                        "#f1c40f",
                        "#e74c3c",
                        "#34495e"
                    ],
                    data: model.ServiceProductId,
                }]
            }
        });

    </script>
}